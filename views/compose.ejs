<%- include("partials/header.ejs") %>

<div class="container-fluid">
  <h1>Compose</h1>
  <form action="/compose" method="post">
    <div class="form-group">
      <label for="titleinputtitle">Title</label>
      <input class="form-control" type="text" name="posttitle" />
    </div>
    <div class="form-group">
      <label for="titleinputcontent">Post</label>
      <textarea
        class="form-control"
        name="post_content"
        cols="30"
        rows="10"
      ></textarea>
    </div>

    <button type="submit" name="button" class="btn btn-primary">Publish</button>
  </form>
</div>

